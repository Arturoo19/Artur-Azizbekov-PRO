<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">


    <fragment
        tools:layout="@layout/fragment_login"
        android:id="@+id/loginFragment"
        android:name="com.example.tienda.ui.fragment.ui.LoginFragment"
        android:label="LoginFragment" >

        <action
            android:id="@+id/action_loginFragment_to_registroFragment2"
            app:destination="@id/registroFragment" />
        <action
            android:id="@+id/action_loginFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        tools:layout="@layout/fragment_registro"
        android:id="@+id/registroFragment"
        android:name="com.example.tienda.ui.fragment.ui.RegistroFragment"
        android:label="RegistroFragment" >

        <action
            android:id="@+id/action_registroFragment_to_dialogLogin"
            app:destination="@id/dialogLogin" />
        <action
            android:id="@+id/action_registroFragment_to_dialogError"
            app:destination="@id/dialogError" />
    </fragment>
    <fragment
        tools:layout="@layout/fragment_main"
        android:id="@+id/mainFragment"
        android:name="com.example.tienda.ui.fragment.ui.MainFragment"
        android:label="MainFragment" />
    <dialog
        android:id="@+id/dialogLogin"
        android:name="com.example.tienda.ui.dialog.DialogLogin"
        android:label="DialogLogin" >
        <action
            android:id="@+id/action_dialogLogin_to_mainFragment"
            app:destination="@id/mainFragment" />
        <action
            android:id="@+id/action_dialogLogin_to_loginFragment"
            app:destination="@id/loginFragment" />
    </dialog>
    <dialog
        android:id="@+id/dialogError"
        android:name="com.example.tienda.ui.dialog.DialogError"
        android:label="DialogError" >

    </dialog>
</navigation>