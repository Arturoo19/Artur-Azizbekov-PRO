<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    tools:context=".MainActivity">

    <EditText
        android:layout_marginTop="50dp"
        android:id="@+id/textIntroducir"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal|number|numberSigned"
        android:textSize="32dp"
        android:gravity="end"
        android:padding="16dp"
        android:singleLine="true"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <GridLayout
        android:id="@+id/gridBotones"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:columnCount="6"
        android:rowCount="5"
        android:useDefaultMargins="true"
        app:layout_constraintTop_toBottomOf="@id/textIntroducir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button android:id="@+id/btn0" android:text="0" android:textSize="28dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Button android:id="@+id/btn1" android:text="1" android:textSize="28dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Button android:id="@+id/btn2" android:text="2" android:textSize="28dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Button android:id="@+id/btn3" android:text="3" android:textSize="28dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Button android:id="@+id/btn4" android:text="4" android:textSize="28dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Button android:id="@+id/btn5" android:text="5" android:textSize="28dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <Button android:id="@+id/btn6" android:text="6" android:textSize="28dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Button android:id="@+id/btn7" android:text="7" android:textSize="28dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Button android:id="@+id/btn8" android:text="8" android:textSize="28dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Button android:id="@+id/btn9" android:text="9" android:textSize="28dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Button android:id="@+id/btnPunto" android:text="." android:textSize="28dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Button android:id="@+id/btnReseat" android:text="R" android:textSize="28dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <Button android:id="@+id/btnSumar" android:text="+" android:textSize="28dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Button android:id="@+id/btnRestar" android:text="-" android:textSize="28dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Button android:id="@+id/btnMultiplicar" android:text="*" android:textSize="28dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Button android:id="@+id/btnDividir" android:text="/" android:textSize="28dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <Button android:id="@+id/btnSin" android:text="sin" android:textSize="28dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Button android:id="@+id/btnCos" android:text="cos" android:textSize="28dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Button android:id="@+id/btnTan" android:text="tan" android:textSize="28dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Button android:id="@+id/btnSqrt" android:text="√" android:textSize="28dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Button android:id="@+id/btnPow" android:text="x²" android:textSize="28dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Button android:id="@+id/btnResultado" app:backgroundTint="#FF9800" android:text="=" android:textSize="28dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    </GridLayout>



</androidx.constraintlayout.widget.ConstraintLayout>